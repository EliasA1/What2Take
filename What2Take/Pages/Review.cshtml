@page
@model ReviewModel
@{
    ViewData["Title"] = "Reviews";
}

<head>
    <link rel="stylesheet" href="css\review.css" type="text/css" />
</head>

<h1>@ViewData["Title"]</h1>


<div class="row">
    <div class="leftcolumn">
        @foreach (var crs in Model.Courses)
        {
            <div class="card">
                <h2>@crs.code</h2>
                <div>
                    <p><b>Grade Received</b>
                        @crs.grade
                    </p>
                    <p><b>Class Difficulty:</b>
                        @crs.difficulty
                    </p>
                    <p><b>Comment:</b>
                        @crs.comments
                    </p>
                </div>
            </div>
        }
    </div>
</div>
